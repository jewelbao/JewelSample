<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="GridPasswordView">
        <attr name="pwTextColor" format="color|reference"/>
        <attr name="pwTextSize" format="dimension"/>

        <attr name="pwLineColor" format="color|reference"/>
        <attr name="pwLineWidth" format="dimension"/>
        <attr name="pwGridColor" format="color"/>

        <attr name="pwLength" format="integer"/>
        <attr name="pwTransformation" format="string"/>

        <attr name="pwType" format="enum">
            <enum name="number" value="0"/>
            <enum name="text" value="1"/>
            <enum name="visible" value="2"/>
            <enum name="web" value="3"/>
        </attr>
    </declare-styleable>
</resources>